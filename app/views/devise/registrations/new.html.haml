.reg.bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .devise-panel.panel
          .panel-heading
            %h2(class="text-center") Join Instayo
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification
            .panel-body
              = f.input :email, required: true, autofocus: true, placeholder: "Email", input_html: {class: 'form-control form-element'}, label: false
              = f.input :username, required: true, input_html: {class: 'form-control form-element'}, placeholder: "Username", label: false
              = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: 'form-control form-element'}, placeholder: "Password", label: false, hint: false
              = f.input :password_confirmation, required: true, input_html: {class: 'form-control form-element'}, placeholder: "Confirm Password", label: false
              = f.button :submit, "Sign up", class: "btn-block btn-lg bg-info devise-button"
